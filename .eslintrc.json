{
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 8,
        "env": {
        	"es6": true,
        	"node": true
        },
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", {
          "code": 100,
          "tabWidth": 4,
          "ignoreUrls": true
        }],
        "no-tabs": "off"
    }
}
